.panel
  &__content
    background-color $gray
    border-radius 20px
    padding 0 20px 20px
    display flex
    flex 1 1 auto
    flex-direction column
    align-items stretch
    transition background-color .3s ease

    .panel:hover &
      @media $more-mobile
        background-color $grayDark

    @media $mobile
      padding 16px
      padding-top 0

    .panel_type_critical &
      padding-top 20px

      @media $mobile
        padding-top 16px

  &__text
    margin-top 0
    margin-bottom 0

  &__player
    margin-top 10px

  &__buttons
    display grid
    grid-template-columns repeat(auto-fit, 130px)
    grid-gap 20px

    @media $mobile
      justify-content space-between

  &__image
    width 100%
    border-radius 20px
    vertical-align middle