html
  font-size 10px

  @media $more-desktop
    font-size calc(.6vw)

  @media $tablet
    font-size 8px

  @media $mobile
    font-size 9px

body
  color $textColor
  font-family Arial, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', Helvetica, sans-serif
  font-size 2rem
  line-height 1.16
  font-weight 400
  -webkit-font-smoothing antialiased // mac fix
  -webkit-text-stroke 1px transparent // mac fix
  -webkit-text-size-adjust 100% // stop iphone resize when orientation landscape

h1,
.h1
  font-size 3.6rem
  font-weight 700
  margin-top 20px
  margin-bottom 30px

  @media $mobile
    font-size 1.33em

h2,
.h2
  font-size 2.7rem
  font-weight 700
  margin-top 40px
  margin-bottom 20px

h3,
.h3
  font-size 1.8rem
  font-weight 700
  margin-top 30px
  margin-bottom 20px

h4,
.h4
  font-size 1.6rem
  margin-top 20px
  margin-bottom 20px

h5,
.h5
  font-weight 700
  margin-top 20px
  margin-bottom 20px

h6,
.h6
  margin-top 20px
  margin-bottom 20px

p
  margin-top 20px
  margin-bottom 20px

ul,
ol
  margin-top 20px
  margin-bottom 20px
  padding-left 40px

b,
strong
  font-weight 700

i,
em
  font-style italic

sup
  font-size 85%
  line-height 0
  position relative
  top -.45em
  vertical-align baseline

sub
  font-size 85%
  line-height 0
  position relative
  top .2em
  vertical-align baseline

u
  text-decoration underline

code
  font-family monospace
