icons = stats key robot-cleaner router thermal ac music fridge battery cam kettle

.icon
  width 50px
  height 50px
  background-position 50% 50%
  background-repeat no-repeat
  background-size contain
  vertical-align middle
  display inline-block
  @media $mobile
    width 35px
    height @width

  for icon in icons
    &_{icon}
      background-image url('../images/icons/' + icon + '.svg')
      &_active
        background-image url('../images/icons/' + icon + '-white.svg')
