.video-monitoring
  height 100%
  display grid
  grid-template-columns 1fr 1fr
  grid-gap 20px
  position relative

  &__container
    background-color $textColor
    display flex
    align-items center
    position relative
    cursor pointer
    &.open
      position static

  &__video
    width 100%

  &__element
    height 100%
    width 100%
    background #f00
    position absolute
    top 0
    left 0
    transition all .3s
    .open &
      z-index 1
