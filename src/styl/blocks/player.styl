.player
  &__header
    display flex

  &__picture
    width 53px
    height @width
    background-size cover
    background-repeat no-repeat
    background-position 50%
    border-radius 10px
    margin-right 15px
    flex 0 0 auto
  
  &__info
    flex 1 1 auto

  &__duration
    display flex
    align-items center
    margin-top 12px
  
  &__controls
    margin-top 20px
    display flex
    align-items center

  &__button
    width 53px
    height @width
    border-radius 50%
    background $gray2 url(../images/arrows-prev.svg) 50% no-repeat
    background-size contain
    display inline-block
    vertical-align middle
    flex 0 0 auto
    cursor pointer
    &_next
      transform rotate(180deg)
      margin-left 30px
      margin-right 10px
      @media $mobile
        margin-left 20px
  
  &__value
    min-width 40px
    color #aeaeae
    font-size 14px
    text-align right
    margin-left 5px

  &__track
    flex 0 1 auto
    rangeHandle()
      width 10px
      height 20px
      margin -10px 0 0
      background #d8d8d8
      border-radius 4px
      cursor pointer
      border 0
      @media $mobile
        width 6px

    rangeTrack()
      width 100%
      height 1px
      background #979797
      border-width 10px 0
      cursor pointer

    input-range(rangeHandle, rangeTrack)

  &__volume
    rangeHandle()
      width 17px
      height 17px
      margin -7px 0 0
      border-radius 2px
      background #605757
      border-radius 50%
      cursor pointer
      border 0

    rangeTrack()
      width 100%
      height 4px
      background #efefef
      border-width 10px 0
      border-radius 4px
      cursor pointer

    input-range(rangeHandle, rangeTrack)