.nav-header
  font-size 1.6rem
  color #858585
  &__item
    color inherit
    font-weight 700
    text-decoration none
    margin-right 27px
    &:last-child
      margin-right 0

    &_active,
    body:not(.is-touch-device) &:hover
      color $textColor

.nav-footer
  &__item
    color inherit
    text-decoration none
    display inline-block
    & + &
      margin-left 17px