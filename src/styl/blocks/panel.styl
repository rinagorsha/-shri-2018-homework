.panel
  background-color $gray
  border-radius 20px
  display flex
  flex-direction column
  align-items flex-start
  flex 0 0 auto
  transition all .3s ease
  body:not(.user-is-touching) &:hover
    background-color $grayDark
    box-shadow 0 2px 6px alpha(#c5baba, .5)

  &_l
    font-size 24px
  
  &__header
    width 100%
    border-radius 20px 20px 0 0
    padding 20px 20px 40px
    margin-bottom -20px
    .panel_critical &
      color #fff
      background-color $red

  &__content
    background-color $gray
    border-radius 20px
    padding 20px
    transition background-color .3s ease
    body:not(.user-is-touching) .panel:hover &
      background-color $grayDark

  &__title
    display flex
    align-items center
    margin-bottom 15px
    .panel_l &
      margin-bottom 20px

  &__icon
    flex 0 0 auto
    margin-right 20px

  &__name
    font-size 24px
    font-weight 700
    flex 0 1 auto

  &__info
    font-size 18px
    display flex
    justify-content space-between
    align-items center
    .panel_s &
      display block

  &__text
    margin-bottom 20px
  
  &__button
    min-width 130px

  &__image
    border-radius 20px
    vertical-align middle
