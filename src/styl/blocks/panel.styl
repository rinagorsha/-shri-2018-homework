.panel
  background-color $gray
  border-radius 20px
  display flex
  flex-direction column
  align-items flex-start
  display flex
  flex 0 0 auto
  align-items stretch
  flex-direction column
  transition all .3s ease
  body:not(.user-is-touching) &:hover
    background-color $grayDark
    box-shadow 0 2px 6px alpha(#c5baba, .5)
  &_critical
    background-color $red
    body:not(.user-is-touching) &:hover
      background-color $red
  &_l
    font-size 24px

  &__header
    width 100%
    padding 22px 20px
    border-radius 20px
    .panel_critical &
      color #fff

  &__content
    background-color $gray
    border-radius 20px
    padding 0 20px 20px
    display flex
    flex 1 1 auto
    align-items stretch
    flex-direction column
    transition background-color .3s ease
    body:not(.user-is-touching) .panel:hover &
      background-color $grayDark
    .panel_critical &
      padding-top 20px
  
  &__line
    margin-bottom 20px
    &:last-child
      margin-top auto
      margin-bottom 0

  &__title
    font-size 24px
    font-weight 700
    display flex
    align-items center
    margin-bottom 20px
    // .panel_l &
    //   margin-bottom 20px

  &__icon
    flex 0 0 auto
    margin-right 20px

  &__name
    flex 0 1 auto
  
  &__player
    margin-top 10px

  &__button
    min-width 130px
    & + &
      margin-left 15px

  &__image
    width 100%
    border-radius 20px
    vertical-align middle

.panel-info
  font-size 18px
  display flex
  justify-content space-between
  align-items center
  &_s
    display block

  &__item
    margin-right 10px
    .panel-info_s &
      margin-bottom 20px
      margin-right 0
    &:last-child
      margin-right 0
      margin-bottom 0

